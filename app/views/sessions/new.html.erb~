	<div class="field">
		<%= label_tag :login %>
		<%= text_field_tag :login, params[:login] %>
	</div>
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	<div class="actions">
		<%= submit_tag "Login" %>
	</div>
<% end %>
